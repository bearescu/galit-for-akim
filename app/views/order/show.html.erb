<div class="container">
  <div class="row py-4">
    <div class="col-md-3"><%= image_tag @booking.teddy.photos[0]_url, width: '100%' %></div>
    <div class="col">
      <h1>Order #<%= @booking.id %> <small><span class="badge badge-primary"><%= @booking.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @booking.created_at.to_date %></li>
        <li><strong>TEDDY</strong> <%= @booking.teddy.name %> [<%= @booking.teddy_sku %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @booking.amount %></li>
        </li>
      </ul>
      <p>Estimated delivery in <strong>2 business days</strong></p>
    </div>
  </div>
</div>
