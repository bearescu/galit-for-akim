<h3>New product details</h3>
  <%= simple_form_for( @product) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" }, as: :string
                  # autofocus: true,
                  %>
      <%= f.input :price,
                  required: true,
                  # autofocus: true,
                  as: :integer%>
       <%= f.input :description,
                  required: true,
                  # autofocus: true,
                  as: :text%>
        <%= f.submit %>
  <% end %>
